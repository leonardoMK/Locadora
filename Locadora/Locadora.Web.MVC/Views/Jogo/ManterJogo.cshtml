@model JogoDetalhesModel
@{
    ViewBag.Title = "ManterJogo";
}
<h2 class="White">
    @TempData["Mensagem"]
</h2>
@if (Model == null || Model.Id == null)
{
    <h2 class="yGreen">Cadastro de Jogo</h2>
}
else
{
    <h2 class="yGreen">Edição de Jogo</h2>
}
@using (Html.BeginForm("Salvar", "Jogo", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    @Html.AntiForgeryToken()

    @Html.ValidationSummary(false,null, new { @class = "White" });

    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Nome, new { @class = "col-sm-2 control-label yGreen" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Nome, null, new { @class = "White" })
        </div>
    </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Categoria, new { @class = "col-sm-2 control-label yGreen" })
            <div class="col-sm-10">
                @Html.EnumDropDownListFor(m => m.Categoria, "Selecione", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Categoria, null, new { @class = "white" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Descricao, new { @class = "col-sm-2 control-label yGreen" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Descricao, null, new { @class = "white" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Selo, new { @class = "col-sm-2 control-label yGreen" })
            <div class="col-sm-10">
                @Html.EnumDropDownListFor(m => m.Selo, "Selecione", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Selo, null, new { @class = "white" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Imagem, new { @class = "col-sm-2 control-label yGreen" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Imagem, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Video, new { @class = "col-sm-2 control-label yGreen" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Video, new { @class = "form-control" })
            </div>
        </div>
    //DropDownListFors to Enum

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </div>
}
@section Scripts {
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}