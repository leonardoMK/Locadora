@model LoginModel
@{
    ViewBag.Title = "Index";
}



<h4 class="Black">@Html.ValidationMessage("ERRO_LOGIN")</h4>

<h2 class="Black col-lg-offset-5">Login</h2>
<div class="col-lg-offset-4">
    
    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form white" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true);

        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "Black" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "black" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "Black" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "black" })
        </div>
        <input type="submit" name="enviar" value="Login" class="btn" />
    }
</div>